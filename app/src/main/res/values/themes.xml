<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paladium" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- EditTex, ProgressBar, swith background y otros views mÃ¡s,
         es el color cuando se selecciona o cuando se escribe en el edtitText -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- color para el drawable de producto para cuando se Theme Day-->
        <item name="drawable_producto_tintColor">@color/drawable_color_day</item>

        <item name="color_texto_titulo">@color/color_texto_titulo_day</item>
        <item name="color_texto_subtitulo">@color/color_texto_subtitulo_day</item>
        <item name="color_texto_normal">@color/color_texto_normal_day</item>
        <item name="color_texto_normal_lite">@color/color_texto_normal_lite_day</item>

        <item name="bottom_sheet_background">@color/bottom_sheet_background_day</item>

    </style>

    <style name="custom_bottom_sheet_qrbar_scar_animation" >
        <item name="android:windowEnterAnimation">@anim/custom_bottom_sheet_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/custom_bottom_sheet_slide_out_bottom</item>
    </style>

</resources>